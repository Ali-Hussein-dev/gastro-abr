{
  "name": "nextjs-boilerplate",
  "decription": "Boilerplate for Nextjs and Typescript",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "next build && next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
    "temp": "ls -la .git/hooks",
    "test": "jest",
    "test-all": "npm-run-all -p check-types format lint test",
    "i": "npm i & npm update",
    "post:install": "npm dedpue",
    "clean": "rm -rf node_modules & rm package-lock.json & npm i"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.3.4",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@testing-library/jest-dom": "^5.11.9",
    "axios": "^0.21.1",
    "framer-motion": "^3.10.5",
    "next": "10.0.8",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-query": "^3.12.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@tailwindcss/jit": "^0.1.1",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.2.3"
  },
  "husky": {
    "pre-commit": "npx --no-install lint-staged && npm run test-all && npm run build",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-push": "npm run test-all"
  },
  "lint-staged": {
    "**/*.+(ts|js|tsx|json)": [
      "prettier --write",
      "git add"
    ],
    "*.+(js|ts|tsx)": "eslint"
  },
  "keyword": [
    "nextjs",
    "react",
    "tailwindcss",
    "tailwind",
    "chkakra",
    "chkakra-ui",
    "typescript",
    "boilerplate",
    "starter-kit",
    "starter",
    "jest",
    "eslint",
    "react-icons",
    "prettier"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ali-Hussein-dev/nextjs-boilerplate"
  },
  "volta": {
    "node": "14.16.0",
    "npm": "7.6.3"
  }
}
